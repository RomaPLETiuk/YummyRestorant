<div class="container">
    <h1>Редагувати страву</h1>
    <form method="POST" enctype="multipart/form-data">
        <label asp-for="Name">Назва</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>

        <label asp-for="Price">Вартість</label>
        <input type="number" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>

        <label>Інгредієнти</label>
        <input type="text" asp-for="Ingredients" class="form-control" />
        <span asp-validation-for="Ingredients"></span>

        <label asp-for="CategoryId">Категорія</label>
        <select class="form-select" asp-for="CategoryId" asp-items="Model._categories"></select>
        <span asp-validation-for="CategoryId"></span>
        @*<label asp-for="CategoryId">Категорія</label>
