          <option value="">Оберіть категорію</option>
        </select>
       <span asp-validation-for="CategoryId"></span>*@

       <label asp-for="Image">Фото</label><br />
        <img src="~/Images/@Model.ImageName" style="max-width:100px;" class="img-thumbnail" />
        <br />
        <input type="file" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image"></span><br />
       
        

        <div class="d-flex justify-content-center">
            <input class="btn btn-outline-warning btn-lg" type="submit" value="Зберегти зміни" />
        </div>
    </form>
</div>

