<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">@_localizer["adminDashboard"]</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link active" aria-current="page">@_localizer["home"]</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Booking" asp-action="BookingList" class="nav-link">booking</a>
                    </li>               @*FDfdweffw*@
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Chef" asp-action="Index" class="nav-link">@_localizer["chefs"]</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Event" asp-action="Index" class="nav-link">@_localizer["events"]</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Authentication" asp-action="Logout" class="text-danger nav-link">@_localizer["logout"]</a>
                    </li>
                </ul>
                <partial name="~/Views/PartialViews/_SelectLanguagePartial.cshtml">
            </div>
        </div>
    </nav>



</body>
</html>